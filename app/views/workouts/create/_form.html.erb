<div class="flex h-screen mt-5">
  <div class="flex-auto w-1">
        <div class="relative z-0 w-full mb-6 group">
            <ol class="workout-stepper space-y-4 w-72">
                <li>
                    <div class="w-full p-4 text-green-700 border border-green-300 rounded-lg bg-green-50 dark:bg-gray-800 dark:border-green-800 dark:text-green-400" role="button" target='0'
                        >
                        <div class="flex items-center justify-between">
                            <span class="sr-only">Workout</span>
                            <h3 class="font-medium">1. Workout</h3>
                            <svg aria-hidden="true" class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
                        </div>
                    </div>
                </li>
                <li>
                    <div class="w-full p-4 text-blue-700 bg-blue-100 border border-blue-300 rounded-lg dark:bg-gray-800 dark:border-blue-800 dark:text-blue-400" role="button" target='1'
                    data-require="<%= [{'id': '#workout_name', attribute: 'filled'}].to_json %>">
                        <div class="flex items-center justify-between">
                            <span class="sr-only">Workout Details</span>
                            <h3 class="font-medium">Workout Details</h3>
                            <svg aria-hidden="true" class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
                        </div>
                    </div>
                </li>
                <li>
                    <div class="w-full p-4 text-blue-700 bg-blue-100 border border-blue-300 rounded-lg dark:bg-gray-800 dark:border-blue-800 dark:text-blue-400" role="button" target='2'>
                        <div class="flex items-center justify-between">
                            <span class="sr-only">Exercise</span>
                            <h3 class="font-medium">Add Exercise</h3>
                            <svg aria-hidden="true" class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
                        </div>
                    </div>
                </li>
            </ol>
        </div>
    </div>
    <div class="flex-auto w-64">
    
    <div class="stepper-targets relative z-0 w-full group" key='0'>
        <div class="">
            <input class="string optional bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="Name of Workout" type="text" name="workout[name]" id="workout_name">
        </div>
    </div>
    <div class="stepper-targets hidden relative z-0 w-full group" key='1'>
        <div>
            <textarea class="text optional mt-5 block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="Workout Notes..." name="workout[notes]" id="workout_notes"></textarea>
        </div>
    </div>
    <div class="stepper-targets hidden relative z-0 w-full  group" key='2'>
        <label for="underline_select" class="sr-only">Underline select</label>
        <select id="workoutAdd" class="block py-2.5 px-0 w-full text-sm text-gray-500 bg-transparent border-0 border-b-2 border-gray-200 appearance-none dark:text-gray-400 dark:border-gray-700 focus:outline-none focus:ring-0 focus:border-gray-200 peer">
            <option selected>Choose Exercise</option>
            <% @exercises.each do |exercise| %>
                <option value="<%= form_workout_user_exercise_path(current_user, exercise.id) %>"><%= exercise.name %></option>
            <% end %>   
        </select>
        <div class="relative overflow-x-auto shadow-md">
            <table id='exerciseTable' class="w-full text-sm text-left text-gray-500 dark:text-gray-400 mt-5">
                <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                    <tr>
                        <th scope="col" class="px-6 py-3">
                            Order
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Exercise Name
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Sets
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Reps
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Duration
                        </th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
        <button id='save' data-url="<%= user_workouts_path(current_user) %>" class="rounded-full rounded-lg bg-green-500 text-white p-2 mt-5 hover:bg-green-700">Save</button>
    </div>
</div>