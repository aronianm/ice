<% active = "workouts_links inline-flex p-4 text-blue-600 border-b-2 border-blue-600 rounded-t-lg active dark:text-blue-500 dark:border-blue-500 group" %>
<% in_active = "workouts_links inline-flex p-4 border-b-2 border-transparent rounded-t-lg hover:text-gray-600 hover:border-gray-300 dark:hover:text-gray-300 group" %>

<% active_icon = "w-5 h-5 mr-2 text-blue-600 dark:text-blue-500"  %>
<% inactive_icon = "w-5 h-5 mr-2 text-gray-400 group-hover:text-gray-500 dark:text-gray-500 dark:group-hover:text-gray-300" %>

<% active_link = local_assigns[:active] %>
<div class="border-b border-gray-200 dark:border-gray-700">
    <ul class="flex flex-wrap -mb-px text-sm font-medium text-center text-gray-500 dark:text-gray-400">
        <li class="mr-2">
            <%= link_to workout_table_user_workouts_path(current_user), class: active_link.nil? || active_link == :index ? active : in_active, :remote => true do %>
            
                <svg aria-hidden="true" class="<%= active_link.nil? || active_link == :index ? active_icon : inactive_icon %>" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path d="M5 3a2 2 0 00-2 2v2a2 2 0 002 2h2a2 2 0 002-2V5a2 2 0 00-2-2H5zM5 11a2 2 0 00-2 2v2a2 2 0 002 2h2a2 2 0 002-2v-2a2 2 0 00-2-2H5zM11 5a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V5zM11 13a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"></path></svg>Workouts
            <% end %>
        </li>
        <li class="mr-2">
            <%= link_to new_user_workout_path, class: active_link  == :new ? active : in_active, remote: true do %>
            <svg fill="currentColor" viewBox="0 0 20 20" class="<%= active_link  == :new ? active_icon : inactive_icon %>"  xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                  <path clip-rule="evenodd" fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm.75-11.25a.75.75 0 00-1.5 0v2.5h-2.5a.75.75 0 000 1.5h2.5v2.5a.75.75 0 001.5 0v-2.5h2.5a.75.75 0 000-1.5h-2.5v-2.5z"></path>
                </svg>Create Workout
            <% end %>
        </li>
    </ul>
</div>