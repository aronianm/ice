<div class="flex justify-center h-screen items-center mb-10">
  <div>
  <h1 class="text-center">Name of Program for <%= @user.name %></h1>
  <div class="w-full max-w-xs">
    <%= simple_form_for @program, html: {class: "bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4"}, url: trainor_user_programs_path(@user.id) do |f| %>
      <div class="mb-4 flex">
        <%= f.input :name, label: false, input_html: {class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", placeholder: "Name of program"} %>
          <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-1 px-2 rounded focus:outline-none focus:shadow-outline ml-5" type="submit">
          Create
         </button>
    <% end %>
  </div>
</div>
</div>