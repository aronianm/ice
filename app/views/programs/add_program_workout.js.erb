var html = "<%=j render :partial => 'add_program_workout' %>"


$("#workoutSection").append(html)

$(".add-exercise-to-program:last").on('click', function(){
	$(".add-exercise-to-program").removeClass('target')
	var url = $(this).data('url')
	$(this).addClass('target')
	$.ajax({
		url: url,
		method: 'GET'
	})
})


function buildProgramDaysHTML(){
	$("#workoutSection").each(function(){
		var dayIndex = {
			0: 'Day 1',
			1: 'Day 2',
			2: 'Day 3',
			3: 'Day 4',
			4: 'Day 5',
			5: 'Day 6',
			6: 'Day 7'
		}
		$(this).find(".exercise-card").each(function(index){
			$(this).find('.day-heading').remove()
			var modWeekDay = index % 7
			var day = dayIndex[modWeekDay]
			var dayHtml = `<h3 class='text-white day-heading text-center font-semibold bg-slate-600 underline md:underline-offset-4'>${day}</h3>`
			$(this).prepend(dayHtml)

		})
	})
}

buildProgramDaysHTML()