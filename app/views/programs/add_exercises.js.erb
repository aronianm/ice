var html = `<%=j render :partial => 'add_exercises' %>`


$("#exerciseModal").remove()


$("#program").append(html)
$("#program").find("#exerciseModal").slideDown("slow");

$("#addExercises").on('click', function(){
	
	var url = $(this).data('url')
	payload = {'exercises': []}
	$(".exercise-rows").each(function(){
		if($(this).data('active')){
			var exerciseName = $(this).find('.exerciseName')
			var sets = $(this).find("input[name='sets']").val()
			var reps = $(this).find("input[name='reps']").val()
			var duration = $(this).find("input[name='duration']").val()
			var weight  = $(this).find("input[name='weight']").val()
			var notes = $(this).find("input[name='notes']").val()
			exercise = {
				'name': exerciseName,
				'sets': sets,
				'reps': reps,
				'duration': duration,
				'weight': weight,
				'notes': notes
			}
			payload['exercises'].push(exercise)
		}
	})
	$("#exerciseModal").remove();
	debugger;
})